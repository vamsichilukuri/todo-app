<%- include("./header.ejs") %>

<div class="container mt-5">
	<form action="/todos" method="post" class="d-flex">
		<input
			type="text"
			name="todo"
			placeholder="Enter todo.."
			class="form-control"
		/>
		<input type="submit" class="btn btn-secondary" value="Add todo" />
	</form>
	<div>
		<ul class="list-group mt-5">
			<% data.forEach(todos => { %>
			<li class="list-group-item">
				<%= todos.todo %>
				<a href="/todos/remove/<%= todos._id %>"
					class="float-right text-danger"				>
					delete
				</a>
			</li>
			<% }) %>
		</ul>
	</div>
</div>
